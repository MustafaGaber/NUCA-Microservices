                    <label class="form-check-label" asp-for="RememberLogin">
                    Remember My Login
                    </label>
                    </div>
                    </div>
                    }*@
                    <div class="px-5">
                        <button class="btn btn-primary" name="button" value="login">تسجيل الدخول</button>
                        <button class="btn btn-secondary" name="button" value="cancel">إلغاء</button>
                    </div> 
                </form>
            </div>
