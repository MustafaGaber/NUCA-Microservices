@using NUCA.Projects.Application.Statements.Models;
@using NUCA.Projects.Shared.Util;

@model PrintStatementModel
@{
    <div style="display: flex; font-size:10px; width: 100%; padding: 10px 30px" dir="rtl">
        <div style="text-align: center">
            <div>وزارة الإسكان والمرافق والمجتمعات العمرانية</div>
            <div>هيئة المجتمعات العمرانية الجديدة</div>
        </div>

        <div style="text-align:center; flex:1; padding: 0px 10px">
            <div>
                مشروع/ @Model.Project.Name.UseArabicDigits()
            </div>
            <div>
                شركة/ @Model.Project.Company!.Name.UseArabicDigits()
            </div>
        </div>

        <div style="text-align: center">
            <div>
                <span>مستخلص</span>
                @if (Model.Statement.Final)
                {
                    <span>ختامي</span>
                }
                else
                {
                    <span>جاري رقم @Model.Statement.Index.UseArabicDigits()</span>
                }
            </div>
            @if (!Model.Statement.Final)
            {
                <div>أعمال حتى @Model.Statement.WorksDate.ToString("d/M/yyyy").UseArabicDigits()</div>
            }
        </div>
    </div>

}
